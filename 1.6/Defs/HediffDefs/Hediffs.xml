<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<HediffDef>
		<defName>VPEP_BrainLeech</defName>
		<label>Brain leech</label>
		<description>A brain parasite that leeches consciousness of the victim and gives a fraction of that consciousness to the psycaster that cast it.</description>
		<hediffClass>VPEPuppeteer.Hediff_BrainLeech</hediffClass>
		<initialSeverity>0</initialSeverity>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.1</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.2</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.3</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.3</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.4</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.4</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.5</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>VPEP_Leeching</defName>
		<label>Leeching</label>
		<description>A psychic consciousness boost provided by the brain leech on another person.</description>
		<hediffClass>VPEPuppeteer.Hediff_BrainLeech</hediffClass>
		<initialSeverity>0</initialSeverity>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.1</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.2</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.15</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.3</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.2</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.4</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.25</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPEP_Subjugation</defName>
		<label>subjugation</label>
		<description>A psychic indoctrination that reduces consciousness, manipulation and breathing of the subject until they reach a breaking point and join your colony.</description>
		<hediffClass>VPEPuppeteer.Hediff_Subjugation</hediffClass>
		<initialSeverity>0.5</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>0.0714</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>minor</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.666</minSeverity>
				<label>major</label>
				<vomitMtbDays>1.5</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.833</minSeverity>
				<label>extreme</label>
				<vomitMtbDays>0.75</vomitMtbDays>
				<painOffset>0.05</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.15</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>VPEP_Puppeteer</defName>
		<label>Puppeteer</label>
		<description>This individual is a puppeteer and uses psychic influence to control puppets. Puppets share their experience gain with the puppeteer. If the puppeteer dies, a psychic shockwave will knock all puppets into paralytic abasia.</description>
		<hediffClass>VPEPuppeteer.Hediff_Puppeteer</hediffClass>
		<isBad>False</isBad>
	</HediffDef>

	<HediffDef>
		<defName>VPEP_Puppet</defName>
		<label>Puppet</label>
		<description>This individual is a puppet. They inherit their backstories and traits from their puppetmaster, however they have no needs other than food and rest. They have lowered consiousness and have their experience gain greatly reduced. They will enter the same mental state as their puppeteer.</description>
		<hediffClass>VPEPuppeteer.Hediff_Puppet</hediffClass>
		<isBad>False</isBad>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.3</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="VanillaPsycastsExpanded.Graphics.HediffCompProperties_Mote">
				<compClass>VanillaPsycastsExpanded.Graphics.HediffComp_MoteOverHead</compClass>
				<mote>VPEP_PsycastCastPurple</mote>
			</li>
		</comps>
	</HediffDef>

</Defs>
